@model Infraestructure.Models.Pedido

@{
    ViewBag.Title = "Detalle";
}

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Numero pedido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.idPedido)
        </dd>

        <dt>
            Personal entrega
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PersonalEntrega.nombre)
        </dd>

        <dt>
            Direccion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.direccion)
        </dd>

        <dt>
            Fecha de entrega
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaEntrega)
        </dd>

        <dt>
            Hora de entrega
        </dt>

        <dd>
            @Html.DisplayFor(model => model.horarioEntrega)
        </dd>

    </dl>
    <h4>Detalle Pedido</h4>
    <table class="table table-hover">
        <tr>
            <th>
                Producto
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Precio
            </th>

        </tr>

        @foreach (var item in Model.DetallePedido)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cantidad)
                </td>
                <td>
                    &cent;@Html.DisplayFor(modelItem => item.Precio)
                </td>

            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Regresar al listado pedidos", "Index")
</p>
