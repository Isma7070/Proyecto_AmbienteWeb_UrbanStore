@model IEnumerable<Infraestructure.Models.Producto>

@{
    ViewBag.Title = "Mantenimiento productos";
}
<style>
    h1,h2,h3,h4,h5{
        color:orange;
        margin-left:5px;
    }
    th{
        color:steelblue;
    }
    p{
        margin-left:5px;
    }
</style>

<h2>Mantenimiento productos</h2>

<p style="volume:medium">
    @Html.ActionLink(" ", "Create", null, new { @class = "fas fa-save" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.ProductoID }, new { @class = "far fa-edit" })  |
            @Html.ActionLink(" ", "Details", new { id=item.ProductoID }, new { @class = "fas fa-info" })  |
            @Html.ActionLink(" ", "Delete", new { id=item.ProductoID }, new { @class = "far fa-trash-alt" })
        </td>
    </tr>
}

</table>
