@model Infraestructure.Models.Producto

@{
    ViewBag.Title = "Detalles";
}
<style>
    h1, h2, h3, h4, h5 {
        color: orange;
        margin-left: 5px;
    }

    th {
        color: steelblue;
    }

    p {
        margin-left: 5px;
    }
</style>
<h2>Detalle</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <h3 class="mb-0">@Html.DisplayFor(model => model.Nombre) </h3>
                    <div class="mb-1 text-muted">@Html.DisplayNameFor(model => model.Descripcion):<b></b> @Html.DisplayFor(model => model.Descripcion)</div>
                    <div class="mb-1 text-muted">
                        <b>@Html.DisplayNameFor(model => model.Categoria):</b>
                        <ul>
                            @foreach (var c in Model.Categoria)
                            {
                                <li>@c.Descripcion</li>
                            }
                        </ul>
                    </div>

                    <p class="card-text mb-auto">
                        <b>@Html.DisplayNameFor(model => model.Precio):</b> &cent; @Html.DisplayFor(model => model.Precio)<br />
                        <b>@Html.DisplayNameFor(model => model.Cantidad):</b> @Html.DisplayFor(model => model.Cantidad)<br />
                    </p>

                </div>
                <div class="col-auto d-none d-lg-block">  
                    <img src="data:image/jpeg;charset=utf-8;base64,@Convert.ToBase64String(Model.Imagen)" role="img" alt="Libro @Html.DisplayNameFor(model => model.Nombre)" class="bd-placeholder-img" width="200" height="250">

                </div>
            </div>
        </div>
    </div>

</div>
<p>
    @*@Html.ActionLink("Editar", "Edit", new { id = Model.ProductoID }) |*@
    @Html.ActionLink("Regresar al listado", "IndexAdmin")
</p>
